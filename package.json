{
  "name": "aidk-workspace",
  "version": "0.0.1",
  "description": "React-inspired JSX framework for building AI agents",
  "main": "index.ts",
  "types": "index.ts",
  "keywords": [
    "ai",
    "agent",
    "jsx",
    "llm",
    "openai",
    "anthropic",
    "google"
  ],
  "author": "Ryan Lindgren",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rlindgren/aidk.git"
  },
  "bugs": {
    "url": "https://github.com/rlindgren/aidk/issues"
  },
  "homepage": "https://github.com/rlindgren/aidk#readme",
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:all": "turbo lint && eslint .",
    "format": "oxfmt --write .",
    "format:check": "turbo format:check",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "turbo run test build && changeset publish"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "latest",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      }
    },
    "files": [
      "dist",
      "!dist/**/*.spec.*",
      "!dist/**/*.map"
    ]
  },
  "peerDependencies": {
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@changesets/cli": "^2.0.0",
    "@jest/test-sequencer": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.0.0",
    "eslint-plugin-oxlint": "^1.36.0",
    "jest": "^30.0.0",
    "oxfmt": "^0.21.0",
    "oxlint": "^1.36.0",
    "ts-jest": "^29.0.0",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3"
  }
}
