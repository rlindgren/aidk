{
  "name": "aidk-devtools",
  "version": "0.1.7",
  "description": "Developer tools for AIDK - visualize execution, context, and state",
  "keywords": [
    "agent",
    "ai",
    "debugging",
    "devtools"
  ],
  "homepage": "https://github.com/rlindgren/aidk#readme",
  "bugs": {
    "url": "https://github.com/rlindgren/aidk/issues"
  },
  "license": "ISC",
  "author": "Ryan Lindgren",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rlindgren/aidk.git",
    "directory": "packages/devtools"
  },
  "bin": {
    "aidk-devtools": "./src/cli.ts"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./integration": "./src/integration/index.ts"
  },
  "publishConfig": {
    "access": "public",
    "bin": {
      "aidk-devtools": "./dist/cli.js"
    },
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "./integration": {
        "types": "./dist/integration/index.d.ts",
        "import": "./dist/integration/index.js"
      }
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "scripts": {
    "build": "pnpm build:server && pnpm build:ui",
    "build:server": "tsc -p tsconfig.build.json",
    "build:ui": "vite build --config ui/vite.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "lint": "oxlint src/",
    "format:check": "oxfmt --check src/",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build",
    "dev": "tsc --watch",
    "dev:ui": "vite --config ui/vite.config.ts",
    "devtools": "tsx src/cli.ts",
    "devtools:open": "tsx src/cli.ts --open"
  },
  "dependencies": {
    "aidk-client": "workspace:*",
    "aidk-kernel": "workspace:*",
    "aidk-shared": "workspace:*",
    "marked": "^17.0.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.5.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsx": "^4.21.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "optionalDependencies": {
    "open": "^10.0.0"
  }
}
