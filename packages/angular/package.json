{
  "name": "aidk-angular",
  "version": "0.1.0",
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./markdown.css": "./src/markdown.css"
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && cp src/markdown.css dist/markdown.css",
    "test": "jest",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "aidk-client": "workspace:*"
  },
  "peerDependencies": {
    "@angular/core": "^20.0.0",
    "@angular/common": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "marked": "^17.0.0",
    "rxjs": "^7.0.0",
    "tslib": "^2.6.0"
  },
  "publishConfig": {
    "access": "public",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "./dist/markdown.css": "./dist/markdown.css"
  }
}