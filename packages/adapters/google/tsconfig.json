{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "composite": true,
    "paths": {
      "aidk/*": ["../core/src/*"],
      "aidk/content": ["../core/src/content/index.ts"],
      "aidk/model": ["../core/src/model/index.ts"],
      "aidk/jsx/components": ["../core/src/jsx/components/index.ts"]
    }
  },
  "references": [
    { "path": "../../shared" },
    { "path": "../../kernel" },
    { "path": "../../core" },
    { "path": "./tsconfig.build.json" },
    { "path": "./tsconfig.spec.json" }
  ],
  "include": ["src"],
  "exclude": ["src/**/*.spec.ts", "src/**/*.spec.tsx"]
}
