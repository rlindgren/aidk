{
  "name": "aidk-kernel",
  "version": "0.1.0",
  "type": "module",
  "main": "src/index.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./execution-helpers": "./src/execution-helpers.ts",
    "./*": "./src/**/*.ts"
  },
  "publishConfig": {
    "access": "public",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "./execution-helpers": {
        "types": "./dist/execution-helpers.d.ts",
        "import": "./dist/execution-helpers.js"
      },
      "./*": {
        "types": "./dist/**/*.d.ts",
        "import": "./dist/**/*.js"
      }
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "jest",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "aidk-shared": "workspace:*",
    "pino": "^9.6.0"
  },
  "devDependencies": {
    "pino-pretty": "^13.0.0"
  }
}
